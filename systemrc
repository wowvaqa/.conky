conky.config = {
    alignment = 'top_left',
    background = true,
    border_width = 6,
    default_color = '#F1F1F2',
    color1 = '#F1F1F2',
    double_buffer = true,
    draw_borders = false,
    draw_outline = false, -- amplifies text if yes
    draw_shades = true,
    use_xft = true,
    font = 'Ubuntu Mono:normal:size=9',
    gap_x = 660,
    gap_y = 40,
    maximum_width  = 580,
    minimum_width  = 580,
    no_buffers = true,

    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_argb_value = 255,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    draw_blended = false,

    stippled_borders = 2,
    update_interval = 1.0,
    uppercase = false, -- set to yes if you want all text to be in uppercase
    use_spacer = 'right',

}

conky.text = [[
${color1}${font Sans:normal:size=9}SYSTEM ${hr 2}$color1$font
Kernel:${alignr} $sysname $kernel $machine
Hostname:${alignr} $nodename
Conky:${alignr} $conky_version
Uptime:${alignr} $uptime
]];
